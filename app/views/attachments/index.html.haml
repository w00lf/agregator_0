- model_class = Attachment
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
  = render 'form'
  %ul{ class: 'thumbnails', id: 'attachments'}

:javascript
  $(function() {
    window.router = new Agrigator.Routers.AttachmentsRouter({ attachments: #{@attachments_json.html_safe} });
    Backbone.history.start();
  });