- model_class = Attachment
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:file_file_name) + ':'
  %br
  = @attachment.file_file_name
%p
  %strong= model_class.human_attribute_name(:file_content_type) + ':'
  %br
  = @attachment.file_content_type
%p
  %strong= model_class.human_attribute_name(:file_file_size) + ':'
  %br
  = @attachment.file_file_size
%p
  %strong= model_class.human_attribute_name(:file_updated_at) + ':'
  %br
  = @attachment.file_updated_at

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), attachments_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_attachment_path(@attachment), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), attachment_path(@attachment), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
